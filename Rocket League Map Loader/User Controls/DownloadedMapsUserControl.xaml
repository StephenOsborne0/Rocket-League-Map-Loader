<UserControl x:Class="Rocket_League_Map_Loader.User_Controls.DownloadedMapsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rocket_League_Map_Loader.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}">
            <StackPanel Name="DownloadedMapsStackPanel"></StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
